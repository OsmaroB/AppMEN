<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h1>Change password</h1>
            </div>
            <div class="card-body">
                <form action="/users/password/{{user.id}}?_method=PUT" method="post">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <input type="password" name="password_old" class="form-control" placeholder="old password" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="new password">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password_new_confirm" class="form-control" placeholder="confirm new password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Sing In</button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>