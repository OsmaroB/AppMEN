<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Edit Note</h3>
            </div>
            <div class="card-body">
                <!--OJO EN ESTAS DOS LINEAS SE HACE UNA PETICION PUT POR LA CONFIGURACION DE OVERRIDE-->
                <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="post">
                    <input type="hidden" name="_method" value="PUT">
                <!--REVISALAS BIEN-->
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Title" class="form-control" value="{{note.title}}">
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control">{{note.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>